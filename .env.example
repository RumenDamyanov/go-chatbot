# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_ENDPOINT=https://api.anthropic.com/v1/messages

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models

# xAI Configuration
XAI_API_KEY=your-xai-api-key-here
XAI_MODEL=grok-1
XAI_ENDPOINT=https://api.x.ai/v1/chat/completions

# Meta Configuration
META_API_KEY=your-meta-api-key-here
META_MODEL=llama-3-70b
META_ENDPOINT=https://api.meta.ai/v1/chat/completions

# Ollama Configuration (for local models)
OLLAMA_ENDPOINT=http://localhost:11434/api/chat
OLLAMA_MODEL=llama2

# Chatbot Configuration
CHATBOT_MODEL=openai
CHATBOT_PROMPT=You are a helpful, friendly chatbot.
CHATBOT_LANGUAGE=en
CHATBOT_TONE=neutral
CHATBOT_RATE_LIMIT=10
CHATBOT_EMOJIS=true
CHATBOT_DEESCALATE=true
CHATBOT_FUNNY=false

# Security Configuration
CHATBOT_MAX_TOKENS=256
CHATBOT_TEMPERATURE=0.7
CHATBOT_TIMEOUT=30s

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=1m

# Message Filtering
FILTER_PROFANITIES=true
FILTER_LINKS=true
FILTER_AGGRESSION=true
